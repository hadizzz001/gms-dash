generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  price       String
  img         String[]
  category    String
  type        String
  brand        String
  createdAt   DateTime @default(now())
}

model Category {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
  type String
}

model Brand {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  name String   @unique 
  img  String[]
}
